{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@text-adventures/shared": [
        "dist/shared/shared",
        "dist/shared",
        "projects/shared/src/public-api"
      ],
      "@text-adventures/firestore-be": [
        "dist/firestore-be/firestore-be",
        "dist/firestore-be",
        "projects/firestore-be/src/public-api"
      ],
      "@text-adventures/data-provider": [
        "dist/data-provider/data-provider",
        "dist/data-provider",
        "projects/data-provider/src/public-api"
      ],
      "@text-adventures/store": [
        "dist/store/store",
        "dist/store",
        "projects/store/src/public-api"
      ],
      "@text-adventures/business-logic": [
        "dist/business-logic/business-logic",
        "dist/business-logic",
        "projects/business-logic/src/public-api"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}